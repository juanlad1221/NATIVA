<script>
let pin = document.getElementById('pin')
let btnpin = document.getElementById('btnpin')
let btnEditar = document.getElementById('btneditar')
let btnGuardar = document.getElementById('btnGuardar')
let dias = document.getElementById('dias')
let obligaciones = document.getElementById('obligaciones')
let asuetos = document.getElementById('asuetos')
var id;
var mes;
var tipo;

//Tomo el id selecionado
$(".icon").click(function () {
  id = $(this).attr('atr')
  mes = $(this).attr('atr2')
  tipo = $(this).attr('atr6')
  dias.value = $(this).attr('atr3')
  obligaciones.value = $(this).attr('atr4')
  asuetos.value = $(this).attr('atr5')
})

//Btn guardar
btnGuardar.onclick = () => {
  //Oculto modales anteriores
  $('#myModal').modal('hide')
  
  //Controlo los datos para la modificacion
  if(!FrontValidate.input('dias',['presence','no_letters','NO_LETTERS','no_space',{max:2}],'windows')){
        if(!FrontValidate.input('obligaciones',['presence','no_letters','NO_LETTERS','no_space',{max:2}],'windows')){
            if(!FrontValidate.input('asuetos',['presence','no_letters','NO_LETTERS','no_space',{max:2}],'windows')){
                //alert('paso')
            }else{
                //Con true recarga la pagina
                window.location.reload()
            }
        }else{
            //Con true recarga la pagina
            window.location.reload()
        }
    }else{
        //Con true recarga la pagina
        window.location.reload()
  }//end if
}//end guardar


//btn
btnpin.onclick = () => {
  if(pin.value == localStorage.getItem('pin')){
    Obj.ajaxConfigMsg('PUT','/editando',{id,mes,tipo,dias:dias.value,obligaciones:obligaciones.value,asuetos:asuetos.value},
    'La Actualizacion Fue Exitosa...',[{code:400,msg:'Tipo de Datos Incorrecto...'}],'#myModalPin')
  }else{
    alert('Error: PIN Incorrecto')
  }//end if pin
}//end btn

//Pone input pin con focus
$('#myModalPin').on('shown.bs.modal', function () {
    $('#pin').focus();
})

function HabilitarEdit(){
  let dias = document.getElementById('dias')
  let obligaciones = document.getElementById('obligaciones')
  let asuetos = document.getElementById('asuetos')
  let btnGuardar = document.getElementById('btnGuardar')

  dias.classList.remove('disabled')
  obligaciones.classList.remove('disabled')
  asuetos.classList.remove('disabled')
  btneditar.classList.add('disabled')
  btnGuardar.classList.remove('disabled')

}//end
</script>